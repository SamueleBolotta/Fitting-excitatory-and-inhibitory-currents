%% This function simulates an excitatory current.

function [EPSC, t] = generate_E(Ge, tau_rise_e, tau_decay_e, tmax)
    
    dt = 0.1;                               % time step duration (ms)
    t = 0:dt:tmax-dt;
    Vm = -70;
    EGlu = 0;
    
    EPSC = ((Ge) .* (tau_rise_e * tau_decay_e / (tau_rise_e - tau_decay_e)) * ((exp(-t / tau_rise_e)) - exp(-t / tau_decay_e)) * (Vm - EGlu));

    
end
