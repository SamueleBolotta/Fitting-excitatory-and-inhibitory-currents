%% Plot fit for compound current
figure
subplot(3,1,1)
plot(t,y)
hold on
plot(t,CPSC_fit)
formatSpec = 'Compound current at %d Vm';
A1 = Vm;
str = sprintf(formatSpec,A1);
title(str)
legend("Recorded","Fit")

subplot(3,1,2)
plot(t,IPSC)
hold on
plot(t,IPSC_fit)
title("Inhibitory current")
legend("Recorded","Fit")

subplot(3,1,3)
plot(t,EPSC)
hold on
plot(t,EPSC_fit)
title("Excitatory current")
legend("Recorded","Fit")
